<ui:PwWindowPane x:Class="Neo.PerfectWorking.Cred.CredPackagePane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Neo.PerfectWorking.Cred"
             xmlns:ui="clr-namespace:Neo.PerfectWorking.UI;assembly=PW.Wpf"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             x:Name="credPackagePane"
             Title="Passwörter"
             d:DesignHeight="300" d:DesignWidth="300">
	<ui:PwWindowPane.Image>
		<DrawingImage>
			<DrawingImage.Drawing>
				<GeometryDrawing Brush="#999900" Geometry="M5064 1555c875,-875 2394,-773 3394,226 1000,1000 1101,2519 226,3394 -738,738 -1935,781 -2892,176l-3218 3218c-125,125 -328,125 -453,0l-453 -453c-125,-125 -125,-328 0,-453l3218 -3218c-605,-957 -562,-2154 176,-2892zm-2263 7241l1358 -1358 1131 1131 -453 453 -453 -453 -453 453 453 453 -453 453 -1131 -1131zm3168 -6336c375,-375 1084,-274 1584,226 500,500 601,1209 226,1584 -375,375 -1084,274 -1584,-226 -500,-500 -601,-1209 -226,-1584z" />
			</DrawingImage.Drawing>
		</DrawingImage>
	</ui:PwWindowPane.Image>
    <ui:PwWindowPane.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/PW.Wpf;component/Themes/CommonIcons.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<ControlTemplate x:Key="KeyAddImage">
				<Viewbox Stretch="Uniform" SnapsToDevicePixels="True">
					<Canvas Width="24" Height="24">
						<Path Fill="{TemplateBinding TextElement.Foreground}" Data="M6.5,3C8.46,3 10.13,4.25 10.74,6H22V9H18V12H15V9H10.74C10.13,10.75 8.46,12 6.5,12C4,12 2,10 2,7.5C2,5 4,3 6.5,3M6.5,6A1.5,1.5 0 0,0 5,7.5A1.5,1.5 0 0,0 6.5,9A1.5,1.5 0 0,0 8,7.5A1.5,1.5 0 0,0 6.5,6M8,17H11V14H13V17H16V19H13V22H11V19H8V17Z" />
					</Canvas>
				</Viewbox>
			</ControlTemplate>
			<ControlTemplate x:Key="KeyGenerateImage">
				<Viewbox Stretch="Uniform" SnapsToDevicePixels="True">
					<Canvas Width="24" Height="24">
						<Path Fill="{TemplateBinding TextElement.Foreground}" Data="M19,10H17V8H19M19,13H17V11H19M16,10H14V8H16M16,13H14V11H16M16,17H8V15H16M7,10H5V8H7M7,13H5V11H7M8,11H10V13H8M8,8H10V10H8M11,11H13V13H11M11,8H13V10H11M20,5H4C2.89,5 2,5.89 2,7V17A2,2 0 0,0 4,19H20A2,2 0 0,0 22,17V7C22,5.89 21.1,5 20,5Z" />
					</Canvas>
				</Viewbox>
			</ControlTemplate>
			<ControlTemplate x:Key="KeyEditImage">
				<Viewbox Stretch="Uniform" SnapsToDevicePixels="True">
					<Canvas Width="24" Height="24">
						<Path Fill="{TemplateBinding TextElement.Foreground}" Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z" />
					</Canvas>
				</Viewbox>
			</ControlTemplate>
			<ControlTemplate x:Key="KeyDeleteImage">
				<Viewbox Stretch="Uniform" SnapsToDevicePixels="True">
					<Canvas Width="24" Height="24">
						<Path Fill="{TemplateBinding TextElement.Foreground}" Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" />
					</Canvas>
				</Viewbox>
			</ControlTemplate>

			<Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
				<Setter Property="Width" Value="200" />
				<Setter Property="Height" Value="20" />
				<Setter Property="Padding" Value="1" />
			</Style>
			<Style x:Key="CommentTextBox" TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
				<Setter Property="Height" Value="54" />
				<Setter Property="AcceptsReturn" Value="True" />
				<Setter Property="TextWrapping" Value="Wrap" />
				<Setter Property="VerticalScrollBarVisibility" Value="Auto" />
			</Style>
			<Style TargetType="{x:Type ui:PwTextBoxCommand}" BasedOn="{StaticResource {x:Type ui:PwTextBoxCommand}}">
				<Setter Property="Width" Value="200" />
				<Setter Property="Height" Value="20" />
				<Setter Property="Padding" Value="1" />
			</Style>
			<Style x:Key="CredPopup" TargetType="{x:Type Popup}">
				<Setter Property="StaysOpen" Value="False" />
				<Setter Property="Placement" Value="Right" />
			</Style>
			<Style TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
				<Setter Property="Margin" Value="0,0,12,0" />
			</Style>
			
			<Popup x:Key="newCredentialInfoPopup" Style="{StaticResource CredPopup}">
				<ui:PwPopupContent>
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>

						<Label Grid.Column="0" Grid.Row="0" Content="Provider:" />
						<ComboBox Grid.Column="1" Grid.Row="0" Width="200" Height="22" ItemsSource="{Binding Providers}" SelectedValue="{Binding NewItem.Provider,UpdateSourceTrigger=PropertyChanged}">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Name}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
						<Label Grid.Column="0" Grid.Row="1" Content="Ziel:" />
						<TextBox Grid.Column="1" Grid.Row="1" Text="{Binding NewItem.TargetName,UpdateSourceTrigger=PropertyChanged}" />
						<Label Grid.Column="0" Grid.Row="2" Content="Nutzer:" />
						<TextBox Grid.Column="1" Grid.Row="2" Text="{Binding NewItem.UserName,UpdateSourceTrigger=PropertyChanged}" />
						<Label Grid.Column="0" Grid.Row="3" Content="Passwort:" />
						<ui:PwPasswordBox Grid.Column="1" Grid.Row="3" Width="200" Height="20" Padding="1" Controller="{Binding NewItem.Password}" AllowCopyPassword="True" />
						<Label Grid.Column="0" Grid.Row="4" Content="Kommentar:" />
						<TextBox Grid.Column="1" Grid.Row="4" Text="{Binding NewItem.Comment,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CommentTextBox}" />

						<Button Grid.Column="1" Grid.Row="5" Content="Hinzufügen" Command="{Binding NewItem.AppendCommand}" Margin="0,6,0,0" Padding="6,1" HorizontalAlignment="Right" />
					</Grid>
				</ui:PwPopupContent>
			</Popup>
			<Popup x:Key="changeCredentialInfoPopup" Style="{StaticResource CredPopup}" Placement="Bottom" Margin="10" Opened="ChangeCredentialInfoPopupOpened">
				<ui:PwPopupContent>
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>

						<Label Grid.Column="0" Grid.Row="0" Content="Provider:" />
						<TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Popup}},Path=DataContext.Provider.Name,Mode=OneWay}" />
						<Label Grid.Column="0" Grid.Row="1" Content="Ziel:" />
						<TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Popup}},Path=DataContext.TargetName,Mode=OneWay}" />
						<Label Grid.Column="0" Grid.Row="2" Content="Nutzer:" />
						<TextBox Grid.Column="1" Grid.Row="2" Text="{Binding ChangeItem.UserName,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding ChangeItem.IsReadOnly,Mode=OneWay}" />
						<Label Grid.Column="0" Grid.Row="3" Content="Passwort:" />
						<ui:PwPasswordBox Grid.Column="1" Grid.Row="3" Width="200" Height="20" Padding="1" Controller="{Binding ChangeItem.Password}" AllowCopyPassword="True" IsReadOnly="{Binding ChangeItem.IsReadOnly,Mode=OneWay}" />
						<Label Grid.Column="0" Grid.Row="4" Content="Kommentar:" />
						<TextBox Grid.Column="1" Grid.Row="4" Text="{Binding ChangeItem.Comment,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CommentTextBox}" IsReadOnly="{Binding ChangeItem.IsReadOnly,Mode=OneWay}"  />

						<Button Grid.Column="1" Grid.Row="5" Content="Ändern" Command="{Binding ChangeItem.ChangeCommand}" Margin="0,6,0,0" Padding="6,1" HorizontalAlignment="Right" IsEnabled="{Binding ChangeItem.IsReadOnly,Mode=OneWay,Converter={StaticResource NotBooleanConverter}}" />
					</Grid>
				</ui:PwPopupContent>
			</Popup>
			<Popup x:Key="removePopup" Style="{StaticResource CredPopup}" Placement="Bottom">
				<ui:PwPopupContent>
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<TextBlock Grid.Row="0">
							<Run Text="Passwort für das Ziel "/><Run FontWeight="Bold" Text="{Binding TargetName,Mode=OneWay}" /><Run Text=" löschen?" />
						</TextBlock>
						<Button Grid.Row="1" Content="Löschen" Click="RemoveCredentialInfo" Margin="0,6,0,0" Padding="6,1" HorizontalAlignment="Right" />
					</Grid>
				</ui:PwPopupContent>
			</Popup>
			<Popup x:Key="cryptPopup" Style="{StaticResource CredPopup}">
				<ui:PwPopupContent>
					<ui:PwPopupContent.CommandBindings>
						<CommandBinding Command="{x:Static local:CredPackagePane.CopyGeneratedPasswordCommand}" Executed="CopyTextFromParameter" CanExecute="CanCopyTextFromParameter" />
					</ui:PwPopupContent.CommandBindings>
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>

						<Label Grid.Column="0" Grid.Row="0" Content="Klartext:" />
						<ui:PwTextBoxCommand Grid.Column="1" Grid.Row="0" Text="{Binding Generator.Decrypted,UpdateSourceTrigger=PropertyChanged,Delay=120}" Command="{x:Static local:CredPackagePane.CopyGeneratedPasswordCommand}" CommandParameter="{Binding Generator.Decrypted}">
							<ui:PwTextBoxCommand.CommandContent>
								<ContentControl Template="{StaticResource CopyImage}" />
							</ui:PwTextBoxCommand.CommandContent>
						</ui:PwTextBoxCommand>

						<Label Grid.Column="0" Grid.Row="1" Content="Verschleiert:" />
						<ui:PwTextBoxCommand Grid.Column="1" Grid.Row="1" Text="{Binding Generator.Encrypted,UpdateSourceTrigger=PropertyChanged,Delay=120}" Command="{x:Static local:CredPackagePane.CopyGeneratedPasswordCommand}" CommandParameter="{Binding Generator.Encrypted}">
							<ui:PwTextBoxCommand.CommandContent>
								<ContentControl Template="{StaticResource CopyImage}" />
							</ui:PwTextBoxCommand.CommandContent>
						</ui:PwTextBoxCommand>

						<Label Grid.Column="0" Grid.Row="2" Content="Generieren:" />
						<StackPanel Grid.Column="1" Grid.Row="2" Margin="0,6,0,0">
							<CheckBox Content="Kleinbuchstaben" IsChecked="{Binding Generator.GenerateLetters}" />
							<CheckBox Content="GroßBuchstaben" IsChecked="{Binding Generator.GenerateCaseSensitive}" />
							<CheckBox Content="Zahlen" IsChecked="{Binding Generator.GenerateDigits}" />
							<CheckBox Content="Sonderzeichen" IsChecked="{Binding Generator.GenerateSpecial}" />
							<Slider Value="{Binding Generator.GenerateLength}" Minimum="4" Maximum="100" />
							<TextBlock Text="{Binding Generator.GenerateLength}" />
						</StackPanel>

						<Button Grid.Column="1" Grid.Row="3" Content="Erzeugen" Command="{Binding Generator.GeneratePasswordCommand}" Margin="0,6,0,0" HorizontalAlignment="Right" Padding="6,1" />
					</Grid>
				</ui:PwPopupContent>
			</Popup>
		</ResourceDictionary>
	</ui:PwWindowPane.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0">
            <ui:PwPopupButton Width="24" Popup="{StaticResource newCredentialInfoPopup}">
				<ContentControl Template="{StaticResource KeyAddImage}" Margin="2" />
			</ui:PwPopupButton>
            <ui:PwPopupButton Width="24" Popup="{StaticResource cryptPopup}">
				<ContentControl Template="{StaticResource KeyGenerateImage}" Margin="2" />
			</ui:PwPopupButton>
        </StackPanel>

        <ui:PwSearchListBox x:Name="credentialListBox" Grid.Column="1" ItemsSource="{Binding Credentials}" HorizontalContentAlignment="Stretch">
            <ui:PwSearchListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16" />
                            <RowDefinition Height="16" />
                        </Grid.RowDefinitions>

                        <Image Grid.Column="0" Grid.RowSpan="2" Width="24" Height="24" Source="{Binding Image}" HorizontalAlignment="Center" VerticalAlignment="Center" />

                        <TextBlock Grid.Column="1" Grid.Row="0">
                            <Run Text="{Binding TargetName,Mode=OneWay}" FontWeight="Bold" />
                            <Run Text="{Binding UserName,Mode=OneWay,StringFormat='{}({0})'}" />
                        </TextBlock>
                        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Text="{Binding Comment,Mode=OneWay}" Foreground="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" />

                        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type ui:PwPopupButton}" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Width" Value="24" />
                                    <Setter Property="Height" Value="24" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="3,0,0,0" />
                                </Style>
                            </StackPanel.Resources>
                            <ui:PwPopupButton Popup="{StaticResource changeCredentialInfoPopup}">
								<ContentControl Template="{StaticResource KeyEditImage}" Margin="2" />
							</ui:PwPopupButton>
							<ui:PwPopupButton Popup="{StaticResource removePopup}" IsEnabled="{Binding Provider.IsReadOnly,Mode=OneWay,Converter={StaticResource NotBooleanConverter}}">
								<ContentControl Template="{StaticResource KeyDeleteImage}" Margin="2" />
							</ui:PwPopupButton>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ui:PwSearchListBox.ItemTemplate>
        </ui:PwSearchListBox>
    </Grid>
</ui:PwWindowPane>
