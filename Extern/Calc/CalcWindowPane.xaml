<ui:PwWindowPane x:Class="Neo.PerfectWorking.Calc.CalcWindowPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Neo.PerfectWorking.Calc"
             xmlns:ui="clr-namespace:Neo.PerfectWorking.UI;assembly=PW.Wpf"
             mc:Ignorable="d" 
             Title="Rechner"
             d:DesignHeight="300" d:DesignWidth="300">
	<ui:PwWindowPane.Image>
		<DrawingImage>
			<DrawingImage.Drawing>
				<GeometryDrawing Brush="#5DA5EF" Geometry="M7,2H17A2,2 0 0,1 19,4V20A2,2 0 0,1 17,22H7A2,2 0 0,1 5,20V4A2,2 0 0,1 7,2M7,4V8H17V4H7M7,10V12H9V10H7M11,10V12H13V10H11M15,10V12H17V10H15M7,14V16H9V14H7M11,14V16H13V14H11M15,14V16H17V14H15M7,18V20H9V18H7M11,18V20H13V18H11M15,18V20H17V18H15Z" />
			</DrawingImage.Drawing>
		</DrawingImage>
	</ui:PwWindowPane.Image>
	<ui:PwWindowPane.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/PW.Wpf;component/Themes/CommonIcons.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</ui:PwWindowPane.Resources>
	<Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type ui:PwWindowPane}}}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition Width="120" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="23" />
			<RowDefinition Height="23" />
			<RowDefinition Height="23" />
			<RowDefinition Height="23" />
		</Grid.RowDefinitions>

		<ListBox Grid.Column="0" Grid.RowSpan="4" ItemsSource="{Binding Formulars,Mode=OneWay}" IsSynchronizedWithCurrentItem="True">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock>
						<Run Text="{Binding Formular,Mode=OneWay}" />
						=
						<Run Text="{Binding Value,ConverterCulture=de-DE,Mode=OneWay}" />
					</TextBlock>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<ui:PwTextBoxCommand Grid.Column="0" Grid.Row="4" Command="{x:Static local:CalcWindowPane.ExecuteFormularCommand}" Text="{Binding Path=CurrentFormularText,UpdateSourceTrigger=PropertyChanged}">
			<ui:PwTextBoxCommand.InputBindings>
				<KeyBinding Key="Return" Command="{x:Static local:CalcWindowPane.ExecuteFormularCommand}" />
			</ui:PwTextBoxCommand.InputBindings>
			<ui:PwTextBoxCommand.CommandContent>C</ui:PwTextBoxCommand.CommandContent>
		</ui:PwTextBoxCommand>

		<GridSplitter Grid.RowSpan="5" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="4" />

		<ListBox Grid.Column="1" Grid.Row="0" ItemsSource="{Binding Variables,Mode=OneWay}" Grid.IsSharedSizeScope="True">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" SharedSizeGroup="col1" />
							<ColumnDefinition Width="Auto" SharedSizeGroup="col2" />
						</Grid.ColumnDefinitions>

						<TextBlock Grid.Column="0" Text="{Binding Name,Mode=OneWay}" Margin="3" />
						<TextBlock Grid.Column="1" Text="{Binding Value,Mode=OneWay}" Margin="3" />
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<ui:PwTextBoxCommand Grid.Column="1" Grid.Row="1" IsReadOnly="True">
			<ui:PwTextBoxCommand.Text>
				<Binding Path="CurrentAns" Mode="OneWay">
					<Binding.Converter>
						<local:AnsConverter Base="2" />
					</Binding.Converter>
				</Binding>
			</ui:PwTextBoxCommand.Text>
			<ui:PwTextBoxCommand.CommandContent>C</ui:PwTextBoxCommand.CommandContent>
		</ui:PwTextBoxCommand>
		<ui:PwTextBoxCommand Grid.Column="1" Grid.Row="2">
			<ui:PwTextBoxCommand.Text>
				<Binding Path="CurrentAns" Mode="OneWay">
					<Binding.Converter>
						<local:AnsConverter Base="8" />
					</Binding.Converter>
				</Binding>
			</ui:PwTextBoxCommand.Text>
			<ui:PwTextBoxCommand.CommandContent>C</ui:PwTextBoxCommand.CommandContent>
		</ui:PwTextBoxCommand>
		<ui:PwTextBoxCommand Grid.Column="1" Grid.Row="3">
			<ui:PwTextBoxCommand.Text>
				<Binding Path="CurrentAns" Mode="OneWay">
					<Binding.Converter>
						<local:AnsConverter Base="16" />
					</Binding.Converter>
				</Binding>
			</ui:PwTextBoxCommand.Text>
			<ui:PwTextBoxCommand.CommandContent>C</ui:PwTextBoxCommand.CommandContent>
		</ui:PwTextBoxCommand>
		<ui:PwTextBoxCommand Grid.Column="1" Grid.Row="4">
			<ui:PwTextBoxCommand.Text>
				<Binding Path="CurrentAns" Mode="OneWay">
					<Binding.Converter>
						<local:AnsConverter Base="10" />
					</Binding.Converter>
				</Binding>
			</ui:PwTextBoxCommand.Text>
			<ui:PwTextBoxCommand.CommandContent>C</ui:PwTextBoxCommand.CommandContent>
		</ui:PwTextBoxCommand>
	</Grid>
</ui:PwWindowPane>
